<?xml version="1.0"?>
<ruleset name="Advanced Set">
	<rule ref="~/dev/code-sniffers/wordpress.xml"/>
	
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array" value="form-block"/>
		</properties>
	</rule>
	
	<rule ref="WordPress.NamingConventions.PrefixAllGlobals">
		<properties>
			<property name="prefixes" type="array">
				<element value="form_block"/>
			</property>
		</properties>
	</rule>
</ruleset>
